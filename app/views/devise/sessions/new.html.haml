.login-wrapper
  = render 'shared/signup-header'
  .login-main
    .login-main__box
      .login-main__box__new
        %p
          アカウントをお持ちでない方はこちら
        = link_to "" do
          .login-main__box__new__button
            新規会員登録
      .login-main__box__sns
        %button.login-main__box__sns__facebook
          %i.fab{class: "fa-facebook-square fa-2x"}
          Facebookでログイン
        %button.login-main__box__sns__google
          = image_tag '/google.jpg', class: "google-bottom"
          googleでログイン
      = form_for @user, url: user_session_path, method: :post do |f|
        .login-main__box__form
          .login-main__box__form__input
            = f.email_field :email, placeholder: "メールアドレス", class: "login-main__box__form__input__mail"
          .login-main__box__form__input
            = f.password_field :password, placeholder: "パスワード", class: "login-main__box__form__input__pass"

          = f.submit "ログイン", class: "login-main__box__form__login"
          = link_to "" do
            %small
              パスワードをお忘れの方
  = render 'shared/signup-footer'